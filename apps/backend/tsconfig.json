{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "esnext",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "esnext"
    }
  }
}
